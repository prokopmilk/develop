    <div class="row mbl">
        <div class="col-lg-12">

            <div class="col-md-12">
                <div id="area-chart-spline" style="width: 100%; height: 300px; display: none;">
                </div>
            </div>

        </div>

        <div class="col-lg-12">


            <div class="row">
                <div class="col-md-12">
                    <h2>@ViewBag.Title</h2>
                    <div class="row mtl">
                        <div class="col-md-3">
                            <div class="form-group">
                                <div class="text-center mbl"><img src="~/images/avatar/profile-pic.png" alt="" class="img-responsive" /></div>
                                <div class="text-center mbl">
                                    <a href="#" class="btn btn-green">
                                        <i class="fa fa-upload"></i>&nbsp;
                                        Загрузить
                                    </a>
                                </div>
                            </div>
                            <table class="table table-striped table-hover">
                                <tbody>
                                    <tr>
                                        <td>Имя</td>
                                        <td>@Model.name</td>
                                    </tr>
                                    <tr>
                                        <td>Email</td>
                                        <td>@User.Identity.Name</td>
                                    </tr>
                                    <tr>
                                        <td>сот.</td>
                                        <td>@Model.PhoneNumber</td>
                                    </tr>
                                    <tr>
                                        <td>Адрес для доставки</td>
                                        <td>@Model.adres</td>
                                    </tr>
                                    <tr>
                                        <td>Статус</td>
                                        <td><span class="label label-success">Active</span></td>
                                    </tr>
                                    <tr>
                                        <td>Дата регистрации</td>
                                        <td> @System.DateTime.Today</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-9">
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#tab-edit" data-toggle="tab">Редактировать профиль</a></li>
                                
                            </ul>
                            <div id="generalTabContent" class="tab-content">
                                <div id="tab-edit" class="tab-pane fade in active">
                                    <form action="#" class="form-horizontal">
                                        <h3>Настрйоки аккаунта</h3>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Email</label>
                                            <div class="col-sm-9 controls">
                                                <div class="row">
                                                    <div class="col-xs-9"><input type="email" placeholder="@User.Identity.Name" class="form-control" /></div>
                                                </div>
                                            </div>
                                        </div>
                                      
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Пароль</label>
                                            <div class="col-sm-9 controls">
                                                <div class="row">
                                                    <div class="col-xs-4"><input type="password" placeholder="@Model.HasPassword" value="@Model.HasPassword" class="form-control" /></div>
                                                    @if (Model.HasPassword)
                                                    {
                                                        <label class="btn btn-primary "> @Html.ActionLink("Измените свой текущий пароль", "ChangePassword")</label>
                                                    }
                                                    else
                                                    {
                                                        <label class="label-success">@Html.ActionLink("Создать", "SetPassword")</label>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    
                                        <hr />
                                        <h3>Настройки личности</h3>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Имя и фамилия</label>
                                            <div class="col-sm-9 controls">
                                                <div class="row">
                                                    <div class="col-xs-9"><input type="text" placeholder="@Model.name" class="form-control" /></div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">город</label>
                                            <div class="col-sm-9 controls">
                                                <div class="row">
                                                    <div class="col-xs-4">
                                                        <select class="form-control">
                                                            <option>@Model.city</option>
                                                            <option>Прокопьевск</option>
                                                            <option>Киселевск</option>
                                                            <option>Новокузнецк</option>

                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Адрес доставки</label>
                                            <div class="col-sm-9 controls">
                                                <div class="row">
                                                    <div class="col-xs-9"><input type="text" placeholder="@Model.adres" class="form-control" /></div>
                                                </div>
                                            </div>
                                        </div>
                                                       
                                     
                                    
                                   
                                        <hr />
                                        <h3>Контактная информаця</h3>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Сот. тел.</label>
                                            <div class="col-sm-9 controls">
                                                <div class="row">
                                                    
                                                    <div class="col-xs-9"><input type="text" placeholder="@(Model.PhoneNumber ?? "Отсутсвует")" class="form-control" /></div>
                                                   


                                                      
</div>

                                                <div class="row">
@if (Model.PhoneNumber != null)
{
    using (Html.BeginForm("RemovePhoneNumber", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
                                                    @Html.AntiForgeryToken()
                                                    <br />
                                                    <label class="btn btn-info">@Html.ActionLink("Изменить", "AddPhoneNumber")</label>
                                                    <input type="submit" value="Удалить" class="btn btn-danger" />
                                                    }

                                                    }
                                                    else
                                                    {
                                                    <text>[&nbsp;&nbsp;@Html.ActionLink("Добавить", "AddPhoneNumber", new { @class = "btn btn-link" })]</text>
                                                    }
                                                    </div>

                                                </div>
                                        </div>
                                        
                                        <hr />
                                        <button type="submit" class="btn btn-green btn-block">Сохранить</button>
                                    </form>
                                </div>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>




    </div>
</div>


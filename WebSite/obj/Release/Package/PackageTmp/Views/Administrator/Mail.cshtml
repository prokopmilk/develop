@model IEnumerable<WebSite.Models.Concrete.EmailSettings>

@{
    ViewBag.Title = "E-Mail";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>E-Mail</h2>

<p>
    @Html.ActionLink("Добавить почтовый ящик", "MailCreate")
</p>
<ul id="homeTabs" class="nav nav-tabs">
    
    <li class="active">
        <a href="#mail_news" data-toggle="tab">Рассылки</a>
    </li>
    <li><a href="#mail_setup" data-toggle="tab">Настройки почтовых служб</a></li>
 </ul>

<div id="homeTabsContent" class="tab-content">
    <div class="tab-pane fade active in" id="mail_news">

        <div class="row">
            <div class="col-sm-10">
                <div class="box">
                    <h4 class="underline">Emal-рассылки</h4>
                    <p>Выберите пользователей и напишите текст сообщения, отправьте в один клик и все ваши клиенты узнают, чем вы хотели с ними поделиться</p>
                    <div class="form-group">

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="mail_setup">

        <div class="row">
            <div class="col-sm-12">
                <div class="box">

                    <div class="form-group">

                        @foreach (var item in Model)
                        {

                            <h4 class="underline">@item.Description</h4>
                            <table class="table table-striped table-condensed table-bordered">
                                <tr>
                                    <th>
                                        <strong>Почтовый ящик</strong>
                                    </th>
                                    <th>
                                        <strong>Имя пользователя</strong>
                                    </th>
                                    <th>
                                        <strong>Пароль</strong>
                                    </th>
                                    <th>
                                        <strong>Использовать SSl</strong>
                                    </th>
                                    <th>
                                        <strong>Имя сервера</strong>
                                    </th>
                                    <th>
                                        <strong>Порт сервера</strong>
                                    </th>
                                    <th>
                                        <strong>запись в файл</strong>
                                    </th>
                                    <th>
                                        <strong>Путь к файлу</strong>
                                    </th>

                                    <th></th>
                                </tr>


                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MailFromAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Username)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Password)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UseSsl)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ServerName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ServerPort)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.WriteAsFile)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FileLocation)
                                    </td>

                                    <td>
                                        @Html.ActionLink("Изменить", "MailEdit", new { item.MailFromAddress }) |

                                        @Html.ActionLink("Удалить", "MailDelete", new { item.MailFromAddress })
                                    </td>
                                </tr>


                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
       
    </div>
</div>
@model IEnumerable<WebSite.Models.New>
    @{ViewBag.Title = "Новости";
    }
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

<div class="panel panel-default">
    
    <div class="panel-heading">
        <h2>Новости компании</h2>
        @if (User.IsInRole("Administrator") || User.IsInRole("MainAdmin"))
        {
        <p>
    @Html.ActionLink("Создать новость", "Create")
</p>
        }
    </div>
    <div class="panel-body">

        @foreach (var item in Model)
        {
            <div class="jumbotron">
                <div class="row">

                    <div class="col-md-3">
                        <img src="@Url.Action("GetImage", "New", new { item.id })" width="100%" alt="заголовок" />
                    </div>
                    <div class="col-md-9">
                        <h1>@item.Header</h1>
                        <p class="lead">@item.Description</p>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <nav role="navigation" class="navbar navbar-default">
                        <div class="container-fluid">
                            <div class="navbar-header">
                                <button type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" class="navbar-toggle"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
                                <p class="navbar-brand">Дата публикации: @item.DataPub.ToShortDateString()</p>
                                <ul class="social-icons list-unstyled list-inline mbl mtl">
                                    <li><a href="https://vk.com/share.php?url=http://prokopmilk.apphb.com/New/newpost/@item.id&title=@item.Header Читай подробнее на сайте&description=@item.Description&image=http://prokopmilk.apphb.com/pictures/logo_slogan.jpg" data-hover="tooltip" data-original-title="vk" class="vk"><i class="fa fa-vk"></i></a></li>
                                    <li><a href="http://www.facebook.com/sharer/sharer.php?s=100&p%5Btitle%5D=@item.Header Читай подробнее на сайте&p%5Bsummary%5D=DESC&p%5Burl%5D=http://prokopmilk.apphb.com/New/newpost/@item.id&p%5Bimages%5D%5B0%5D=http://prokopmilk.apphb.com/pictures/logo_slogan.jpg" data-hover="tooltip" data-original-title="facebook" class="facebook"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="http://www.ok.ru/dk?st.cmd=addShare&st.s=1&st._surl=http://prokopmilk.apphb.com/New/newpost/@item.id&st.comments=@item.Header Читай подробнее на сайте" data-hover="tooltip" data-original-title="odnoklassniki" class="odnoklassniki"><i class="fa fa-odnoklassniki"></i></a></li>
                                    <li><a href="https://twitter.com/intent/tweet?original_referer=http%3A%2F%2Ffiddle.jshell.net%2F_display%2F&text=[Новости]@item.Header - Молочая Ферма КФХ Васина&url=http://prokopmilk.apphb.com/New/newpost/@item.id" data-hover="tooltip" data-original-title="twitter" class="twitter"><i class="fa fa-twitter"></i></a></li>
                                </ul>
                            </div>
                            
                            <div id="bs-example-navbar-collapse-1" class="collapse navbar-collapse">


                                <ul class="nav navbar-nav navbar-right">
                                    <li><button type="button" class="btn-sm btn-info ">@Html.ActionLink("Читать", "NewPost", new { item.id })</button></li>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        if (User.IsInRole("Administrator") || User.IsInRole("MainAdmin"))
                                        {
                                            <li class="dropdown">
                                                <a href="#" data-toggle="dropdown" class="dropdown-toggle">Управление новость<b class="caret"></b></a>
                                                <ul class="dropdown-menu">
                                                    <li>@Html.ActionLink("Удалить", "Delete", new { item.id })</li>
                                                    <li>@Html.ActionLink("Редактировать", "Edit", new { item.id })</li>
                                                    <li>@Html.ActionLink("Просмотреть", "NewPost", new { item.id })</li>


                                                </ul>
                                            </li>
                                        }
                                        
                                    }
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
                <button type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" class="navbar-toggle"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
<button type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" class="navbar-toggle"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>

            </div>
        }
    </div>
</div>